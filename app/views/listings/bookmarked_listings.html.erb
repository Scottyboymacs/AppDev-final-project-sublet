<h1> Your Bookmarked Listings</h1>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Name
        </th>

        <th>
          Status
        </th>

        <th>
          Address
        </th>

        <th>
          Rent
        </th>

        <th>
          Visibility
        </th>
        <th>
          Created At
        </th>
        <th>
          Updated At
        </th>
      </tr>

      <% @list_of_listings.each do |listing| %>
      <% current_user_bookmark = Bookmark.where({ :listing_id => listing.id,  :user_id => session[:user_id] }).first%>
        <% if current_user_bookmark != nil %>
      <tr>
        <td>
          <a href="/listing/<%= listing.id %>">
            <%= listing.name %>
          </a>
        </td>
        <td>
          <%= listing.status %>
        </td>
        <td>
          <%= listing.address %>
        </td>
        <td>
          <%= listing.rent %>
        </td>
        <td>
          <%= listing.visibility %>
        </td>
        <td>
          <%= time_ago_in_words(listing.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(listing.updated_at) %> ago
        </td>

        <td>
          <a href= "/delete_listing/<%=listing.id%>">Delete Listing</a>
        </td>
      </tr>
        <% end %>
      <% end %>
      <%#end%>

    </table>
  </div>
</div>
