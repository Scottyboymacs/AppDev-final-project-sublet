<div>
  <div>
    <h1>
      List of all firm locations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new firm location
    </h2>

    <form action="/insert_firm_location" method="post">
      <div>
        <label for="firm_id_box">
          Firm
        </label>

        <input type="text" id="firm_id_box" name="query_firm_id">
      </div>

      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id">
      </div>

      <div>
        <label for="state_id_box">
          State
        </label>

        <input type="text" id="state_id_box" name="query_state_id">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id">
      </div>

      <button>
        Create firm location
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Firm
        </th>

        <th>
          Region
        </th>

        <th>
          State
        </th>

        <th>
          City
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_firm_locations.each do |a_firm_location| %>
      <tr>
        <td>
          <%= a_firm_location.id %>
        </td>

        <td>
          <%= a_firm_location.firm_id %>
        </td>

        <td>
          <%= a_firm_location.region_id %>
        </td>

        <td>
          <%= a_firm_location.state_id %>
        </td>

        <td>
          <%= a_firm_location.city_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_firm_location.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_firm_location.updated_at) %> ago
        </td>

        <td>
          <a href="/firm_locations/<%= a_firm_location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
