<div>
  <div>
    <h1>
      Region #<%= @the_region.id %> details
    </h1>

    <div>
      <div>
        <a href="/regions">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_region/<%= @the_region.id %>">
          Delete region
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_region.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_region.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_region.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit region
    </h2>

    <form action="/modify_region/<%= @the_region.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_region.name %>">
      </div>

      <button>
        Update region
      </button>
    </form>
  </div>
</div>

<hr>
