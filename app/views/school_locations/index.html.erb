<div>
  <div>
    <h1>
      List of all school locations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new school location
    </h2>

    <form action="/insert_school_location" method="post">
      <div>
        <label for="school_id_box">
          School
        </label>

        <input type="text" id="school_id_box" name="query_school_id">
      </div>

      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id">
      </div>

      <div>
        <label for="state_id_box">
          State
        </label>

        <input type="text" id="state_id_box" name="query_state_id">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id">
      </div>

      <button>
        Create school location
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          School
        </th>

        <th>
          Region
        </th>

        <th>
          State
        </th>

        <th>
          City
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_school_locations.each do |a_school_location| %>
      <tr>
        <td>
          <%= a_school_location.id %>
        </td>

        <td>
          <%= a_school_location.school_id %>
        </td>

        <td>
          <%= a_school_location.region_id %>
        </td>

        <td>
          <%= a_school_location.state_id %>
        </td>

        <td>
          <%= a_school_location.city_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_school_location.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_school_location.updated_at) %> ago
        </td>

        <td>
          <a href="/school_locations/<%= a_school_location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
