<div>
  <div>
    <h1>
      School location #<%= @the_school_location.id %> details
    </h1>

    <div>
      <div>
        <a href="/school_locations">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_school_location/<%= @the_school_location.id %>">
          Delete school location
        </a>
      </div>
    </div>

    <dl>
      <dt>
        School
      </dt>
      <dd>
        <%= @the_school_location.school_id %>
      </dd>

      <dt>
        Region
      </dt>
      <dd>
        <%= @the_school_location.region_id %>
      </dd>

      <dt>
        State
      </dt>
      <dd>
        <%= @the_school_location.state_id %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <%= @the_school_location.city_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_school_location.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_school_location.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit school location
    </h2>

    <form action="/modify_school_location/<%= @the_school_location.id %>"  method="post" >
      <div>
        <label for="school_id_box">
          School
        </label>

        <input type="text" id="school_id_box" name="query_school_id" value="<%= @the_school_location.school_id %>">
      </div>

      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id" value="<%= @the_school_location.region_id %>">
      </div>

      <div>
        <label for="state_id_box">
          State
        </label>

        <input type="text" id="state_id_box" name="query_state_id" value="<%= @the_school_location.state_id %>">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id" value="<%= @the_school_location.city_id %>">
      </div>

      <button>
        Update school location
      </button>
    </form>
  </div>
</div>

<hr>
