<div>
  <div>
    <h1>
      Message #<%= @the_message.id %> details
    </h1>

    <div>
      <div>
        <a href="/messages">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_message/<%= @the_message.id %>">
          Delete message
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <dd>
        <%= @the_message.sender_id %>
      </dd>

      <dt>
        Receiver
      </dt>
      <dd>
        <%= @the_message.receiver_id %>
      </dd>

      <dt>
        Listing
      </dt>
      <dd>
        <%= @the_message.listing_id %>
      </dd>

      <dt>
        Copy
      </dt>
      <dd>
        <%= @the_message.copy %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_message.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_message.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit message
    </h2>

    <form action="/modify_message/<%= @the_message.id %>"  method="post" >
      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id" value="<%= @the_message.sender_id %>">
      </div>

      <div>
        <label for="receiver_id_box">
          Receiver
        </label>

        <input type="text" id="receiver_id_box" name="query_receiver_id" value="<%= @the_message.receiver_id %>">
      </div>

      <div>
        <label for="listing_id_box">
          Listing
        </label>

        <input type="text" id="listing_id_box" name="query_listing_id" value="<%= @the_message.listing_id %>">
      </div>

      <div>
        <label for="copy_box">
          Copy
        </label>

        <input type="text" id="copy_box" name="query_copy" value="<%= @the_message.copy %>">
      </div>

      <button>
        Update message
      </button>
    </form>
  </div>
</div>

<hr>
