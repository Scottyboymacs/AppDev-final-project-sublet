<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user
    </h2>

    <form action="/insert_user" method="post">
      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email">
      </div>

      <div>
        <label for="password_digest_box">
          Password digest
        </label>

        <input type="text" id="password_digest_box" name="query_password_digest">
      </div>

      <div>
        <label for="phone_num_box">
          Phone num
        </label>

        <input type="text" id="phone_num_box" name="query_phone_num">
      </div>

      <div>
        <label for="firm_id_box">
          Firm
        </label>

        <input type="text" id="firm_id_box" name="query_firm_id">
      </div>

      <div>
        <label for="school_id_box">
          School
        </label>

        <input type="text" id="school_id_box" name="query_school_id">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id">
      </div>

      <div>
        <label for="neighborhood_id_box">
          Neighborhood
        </label>

        <input type="text" id="neighborhood_id_box" name="query_neighborhood_id">
      </div>

      <div>
        <label for="building_id_box">
          Building
        </label>

        <input type="text" id="building_id_box" name="query_building_id">
      </div>

      <button>
        Create user
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Username
        </th>

        <th>
          Email
        </th>

        <th>
          Password digest
        </th>

        <th>
          Phone num
        </th>

        <th>
          Firm
        </th>

        <th>
          School
        </th>

        <th>
          City
        </th>

        <th>
          Neighborhood
        </th>

        <th>
          Building
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.email %>
        </td>

        <td>
          <%= a_user.password_digest %>
        </td>

        <td>
          <%= a_user.phone_num %>
        </td>

        <td>
          <%= a_user.firm_id %>
        </td>

        <td>
          <%= a_user.school_id %>
        </td>

        <td>
          <%= a_user.city_id %>
        </td>

        <td>
          <%= a_user.neighborhood_id %>
        </td>

        <td>
          <%= a_user.building_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
