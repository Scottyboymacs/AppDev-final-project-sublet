<div>
  <div>
    <h1>
      User #<%= @the_user.id %> details
    </h1>

    <div>
      <div>
        <a href="/users">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_user/<%= @the_user.id %>">
          Delete user
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Username
      </dt>
      <dd>
        <%= @the_user.username %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_user.email %>
      </dd>

      <dt>
        Password digest
      </dt>
      <dd>
        <%= @the_user.password_digest %>
      </dd>

      <dt>
        Phone num
      </dt>
      <dd>
        <%= @the_user.phone_num %>
      </dd>

      <dt>
        Firm
      </dt>
      <dd>
        <%= @the_user.firm_id %>
      </dd>

      <dt>
        School
      </dt>
      <dd>
        <%= @the_user.school_id %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <%= @the_user.city_id %>
      </dd>

      <dt>
        Neighborhood
      </dt>
      <dd>
        <%= @the_user.neighborhood_id %>
      </dd>

      <dt>
        Building
      </dt>
      <dd>
        <%= @the_user.building_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit user
    </h2>

    <form action="/modify_user/<%= @the_user.id %>"  method="post" >
      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username" value="<%= @the_user.username %>">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email" value="<%= @the_user.email %>">
      </div>

      <div>
        <label for="password_digest_box">
          Password digest
        </label>

        <input type="text" id="password_digest_box" name="query_password_digest" value="<%= @the_user.password_digest %>">
      </div>

      <div>
        <label for="phone_num_box">
          Phone num
        </label>

        <input type="text" id="phone_num_box" name="query_phone_num" value="<%= @the_user.phone_num %>">
      </div>

      <div>
        <label for="firm_id_box">
          Firm
        </label>

        <input type="text" id="firm_id_box" name="query_firm_id" value="<%= @the_user.firm_id %>">
      </div>

      <div>
        <label for="school_id_box">
          School
        </label>

        <input type="text" id="school_id_box" name="query_school_id" value="<%= @the_user.school_id %>">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id" value="<%= @the_user.city_id %>">
      </div>

      <div>
        <label for="neighborhood_id_box">
          Neighborhood
        </label>

        <input type="text" id="neighborhood_id_box" name="query_neighborhood_id" value="<%= @the_user.neighborhood_id %>">
      </div>

      <div>
        <label for="building_id_box">
          Building
        </label>

        <input type="text" id="building_id_box" name="query_building_id" value="<%= @the_user.building_id %>">
      </div>

      <button>
        Update user
      </button>
    </form>
  </div>
</div>

<hr>
