<div>
  <div>
    <h1>
      State #<%= @the_state.id %> details
    </h1>

    <div>
      <div>
        <a href="/states">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_state/<%= @the_state.id %>">
          Delete state
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_state.name %>
      </dd>

      <dt>
        Region
      </dt>
      <dd>
        <%= @the_state.region_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_state.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_state.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit state
    </h2>

    <form action="/modify_state/<%= @the_state.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_state.name %>">
      </div>

      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id" value="<%= @the_state.region_id %>">
      </div>

      <button>
        Update state
      </button>
    </form>
  </div>
</div>

<hr>
