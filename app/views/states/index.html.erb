<div>
  <div>
    <h1>
      List of all states
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new state
    </h2>

    <form action="/insert_state" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id">
      </div>

      <button>
        Create state
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Region
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_states.each do |a_state| %>
      <tr>
        <td>
          <%= a_state.id %>
        </td>

        <td>
          <%= a_state.name %>
        </td>

        <td>
          <%= a_state.region_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_state.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_state.updated_at) %> ago
        </td>

        <td>
          <a href="/states/<%= a_state.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
