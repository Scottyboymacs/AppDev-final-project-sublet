<div>
  <div>
    <h1>
      Building #<%= @the_building.id %> details
    </h1>

    <div>
      <div>
        <a href="/buildings">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_building/<%= @the_building.id %>">
          Delete building
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_building.name %>
      </dd>

      <dt>
        Region
      </dt>
      <dd>
        <%= @the_building.region_id %>
      </dd>

      <dt>
        State
      </dt>
      <dd>
        <%= @the_building.state_id %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <%= @the_building.city_id %>
      </dd>

      <dt>
        Neighbourhood
      </dt>
      <dd>
        <%= @the_building.neighbourhood_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_building.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_building.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit building
    </h2>

    <form action="/modify_building/<%= @the_building.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_building.name %>">
      </div>

      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id" value="<%= @the_building.region_id %>">
      </div>

      <div>
        <label for="state_id_box">
          State
        </label>

        <input type="text" id="state_id_box" name="query_state_id" value="<%= @the_building.state_id %>">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id" value="<%= @the_building.city_id %>">
      </div>

      <div>
        <label for="neighbourhood_id_box">
          Neighbourhood
        </label>

        <input type="text" id="neighbourhood_id_box" name="query_neighbourhood_id" value="<%= @the_building.neighbourhood_id %>">
      </div>

      <button>
        Update building
      </button>
    </form>
  </div>
</div>

<hr>
