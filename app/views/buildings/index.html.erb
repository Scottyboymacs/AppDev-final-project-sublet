<div>
  <div>
    <h1>
      List of all buildings
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new building
    </h2>

    <form action="/insert_building" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id">
      </div>

      <div>
        <label for="state_id_box">
          State
        </label>

        <input type="text" id="state_id_box" name="query_state_id">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id">
      </div>

      <div>
        <label for="neighbourhood_id_box">
          Neighbourhood
        </label>

        <input type="text" id="neighbourhood_id_box" name="query_neighbourhood_id">
      </div>

      <button>
        Create building
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Region
        </th>

        <th>
          State
        </th>

        <th>
          City
        </th>

        <th>
          Neighbourhood
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_buildings.each do |a_building| %>
      <tr>
        <td>
          <%= a_building.id %>
        </td>

        <td>
          <%= a_building.name %>
        </td>

        <td>
          <%= a_building.region_id %>
        </td>

        <td>
          <%= a_building.state_id %>
        </td>

        <td>
          <%= a_building.city_id %>
        </td>

        <td>
          <%= a_building.neighbourhood_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_building.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_building.updated_at) %> ago
        </td>

        <td>
          <a href="/buildings/<%= a_building.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
