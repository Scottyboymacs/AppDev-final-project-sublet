<div>
  <div>
    <h1>
      List of all firms
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new firm
    </h2>

    <form action="/insert_firm" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create firm
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_firms.each do |a_firm| %>
      <tr>
        <td>
          <%= a_firm.id %>
        </td>

        <td>
          <%= a_firm.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_firm.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_firm.updated_at) %> ago
        </td>

        <td>
          <a href="/firms/<%= a_firm.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
