<div>
  <div>
    <h1>
      School #<%= @the_school.id %> details
    </h1>

    <div>
      <div>
        <a href="/schools">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_school/<%= @the_school.id %>">
          Delete school
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_school.name %>
      </dd>

      <dt>
        Region
      </dt>
      <dd>
        <%= @the_school.region_id %>
      </dd>

      <dt>
        State
      </dt>
      <dd>
        <%= @the_school.state_id %>
      </dd>

      <dt>
        City
      </dt>
      <dd>
        <%= @the_school.city_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_school.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_school.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit school
    </h2>

    <form action="/modify_school/<%= @the_school.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_school.name %>">
      </div>

      <div>
        <label for="region_id_box">
          Region
        </label>

        <input type="text" id="region_id_box" name="query_region_id" value="<%= @the_school.region_id %>">
      </div>

      <div>
        <label for="state_id_box">
          State
        </label>

        <input type="text" id="state_id_box" name="query_state_id" value="<%= @the_school.state_id %>">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id" value="<%= @the_school.city_id %>">
      </div>

      <button>
        Update school
      </button>
    </form>
  </div>
</div>

<hr>
